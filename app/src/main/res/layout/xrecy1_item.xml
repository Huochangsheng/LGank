<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/item_layout"
        >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/sim_icons"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        fresco:progressBarImage="@drawable/load_img"
        fresco:progressBarAutoRotateInterval="5000"
        fresco:progressBarImageScaleType="centerInside"
        fresco:roundedCornerRadius="15dp"
        android:layout_centerVertical="true"
        fresco:placeholderImage="@drawable/unfind"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:text="标题"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#919090"
        android:layout_toRightOf="@id/sim_icons"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whos"
        android:text="作者"
        android:textSize="14sp"
        android:textColor="#919090"
        android:layout_toRightOf="@id/sim_icons"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/desc"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/times"
        android:text="时间"
        android:textSize="16sp"
        android:textColor="#919090"
        android:layout_below="@id/desc"
        android:layout_marginTop="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#DEDCEE"
        android:layout_below="@id/item_layout"
        />
</RelativeLayout>