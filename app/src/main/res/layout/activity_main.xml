<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yindaopic"
    tools:context="zhangtao.bwie.com.lgank.MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/time_dao"
       android:textColor="#fff"
       android:textSize="18sp"
       android:text="4s"
       android:layout_alignParentTop="true"
       android:layout_alignEnd="@+id/btn_entry"
       android:layout_marginTop="19dp" />
    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="@string/btn_name"
        android:id="@+id/btn_entry"
        android:background="@drawable/btn_entry"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:textColor="#fff"
        android:layout_marginBottom="35dp" />
</RelativeLayout>
